// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "buffer_font_family": "IBM Plex Mono",
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "ensure_final_newline_on_save": false,
  "auto_update": false,
  "show_edit_predictions": false,
  "soft_wrap": "editor_width",
  "terminal": {
    "font_family": "IBM Plex Mono"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "assistant": {
    "enabled": false,
    "version": "2"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left",
    "default_width": 240
  },
  "outline_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "languages": {
    "HTML": {
      "format_on_save": "off"
    },
    "YAML": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true,
            "singleQuote": true
          },
          "schemaStore": {
            "enable": false
          }
        }
      }
    }
  }
}
