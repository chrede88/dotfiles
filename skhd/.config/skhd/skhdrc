# change window focus within space
alt - up : yabai -m window --focus north
alt - down : yabai -m window --focus south
alt - left : yabai -m window --focus west
alt - right : yabai -m window --focus east

# float window
alt - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# toggle fullscreen
shift + alt - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

# Make window zoom to parent node
alt - f : yabai -m window --toggle zoom-parent; sketchybar --trigger window_focus

# swap windows within spaces
shift + alt - up : yabai -m window --swap north
shift + alt - down : yabai -m window --swap south
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

# Moving windows between spaces: shift + lalt - {1, 2, 3, 4, p, n } (Assumes 4 Spaces Max per Display)
shift + alt - 1 : yabai -m window --space 1 --focus; sketchybar --trigger windows_on_spaces
shift + alt - 2 : yabai -m window --space 2 --focus; sketchybar --trigger windows_on_spaces
shift + alt - 3 : yabai -m window --space 3 --focus; sketchybar --trigger windows_on_spaces
shift + alt - 4 : yabai -m window --space 4 --focus; sketchybar --trigger windows_on_spaces
shift + alt - 5 : yabai -m window --space 5 --focus; sketchybar --trigger windows_on_spaces
shift + alt - 6 : yabai -m window --space 6 --focus; sketchybar --trigger windows_on_spaces
shift + alt - p : yabai -m window --space prev --focus; sketchybar --trigger windows_on_spaces
shift + alt - n : yabai -m window --space next --focus; sketchybar --trigger windows_on_spaces

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

